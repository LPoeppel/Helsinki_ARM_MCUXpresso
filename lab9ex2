/* Sets up system hardware */
static void prvSetupHardware(void)
{
	SystemCoreClockUpdate();
	Board_Init();
	/* Initial greenLED0, redLED1, blueLED2 state is off */
	Board_LED_Set(0, false);
	Board_LED_Set(1, false);
	Board_LED_Set(2, false);

}

SemaphoreHandle_t binary = NULL;
SemaphoreHandle_t mutex = NULL;
EventGroupHandle_t xEventGroup;
DigitalIoPin *SW1;
DigitalIoPin *SW2;
DigitalIoPin *SW3;
#define value1 xEventGroup
#define value2 0x07
#define value3 pdTRUE
#define value4 pdTRUE
#define value5 portMAX_DELAY
#define BIT_0 ( 1 << 0 )
#define BIT_1 ( 1 << 1 )
#define BIT_2 ( 1 << 2 )
#define BIT_3 ( 1 << 3 )
#define BIT_4 ( 1 << 4 )
#define BIT_5 ( 1 << 5 )
#define BIT_6 ( 1 << 6 )
#define BIT_7 ( 1 << 7 )
#define BIT_8 ( 1 << 8 )
#define result (BIT_0 & BIT_1 & BIT_2)


int random(int x){
	int i = std::rand() % x;
	if (i < 0) {i = -i;}
	i+= x;
	return i;
}

std::string string(int value){
	int min = (value / 1000) / 60;
	int sec = (value / 1000) % 60;
	std::string output;
	output.append(std::to_string(min));
	output.push_back(':');
	output.append(std::to_string(sec));
	return output;
}

static void vTask1(void *pvParameters) {
	SW1 = new DigitalIoPin(0, 17, DigitalIoPin::pullup, true);
	vTaskDelay(100);
	while(1){
		if(SW1->read()){
			Board_LED_Set(0, true);
			xEventGroupSetBits(xEventGroup, BIT_0);
			vTaskDelay(500);
		}
		vTaskDelay(5);
		if(xEventGroupWaitBits(value1, BIT_0 & BIT_1 & BIT_2, pdTRUE, pdTRUE, value5) == 0x07){
			Board_LED_Set(0, false);
			if(xSemaphoreTake(mutex, portMAX_DELAY) == pdTRUE){
		 		Board_UARTPutSTR(string(xTaskGetTickCount()).c_str());
				Board_UARTPutSTR("\tTask1\r\n");
			}
			xSemaphoreGive(mutex);
			vTaskDelay(100);
		}
		vTaskDelay(100);
	}//while (1)
}//vTask1

static void vTask2(void *pvParameters) {
	SW2 = new DigitalIoPin(1, 11, DigitalIoPin::pullup, true);
	vTaskDelay(100);
	int counter = 0;
	while(1){
		if(SW2->read())	{
			Board_LED_Set(1, true);
			counter++;
			vTaskDelay(500);
			Board_LED_Set(1, false);
		}
		vTaskDelay(5);
		if(counter >= 2){
			Board_LED_Set(1, true);
			xEventGroupSetBits(xEventGroup, BIT_1);
		}
		vTaskDelay(5);
		if(xEventGroupWaitBits(value1, BIT_0 & BIT_1 & BIT_2, pdTRUE, pdTRUE, value5) == 0x07){
			Board_LED_Set(1, false);
			counter = 0;
			if(xSemaphoreTake(mutex, portMAX_DELAY) == pdTRUE){
				Board_UARTPutSTR((string(xTaskGetTickCount())).c_str());
				Board_UARTPutSTR("\tTask2\r\n");
			}
			xSemaphoreGive(mutex);
			vTaskDelay(100);
		}
		vTaskDelay(100);
	}//while (1)
}//vTask2

static void vTask3(void *pvParameters) {
	SW3 = new DigitalIoPin(1, 9, DigitalIoPin::pullup, true);
	vTaskDelay(100);
	int counter = 0;
	while(1){
		if(SW3->read())	{
			Board_LED_Set(2, true);
			counter++;
			vTaskDelay(500);
			Board_LED_Set(2, false);
		}
		vTaskDelay(5);
		if(counter >= 3){
			Board_LED_Set(2, true);
			xEventGroupSetBits(xEventGroup, BIT_2);
		}
		vTaskDelay(5);
		if(xEventGroupWaitBits(value1, (BIT_0 & BIT_1 & BIT_2), pdTRUE, pdTRUE, value5) == 0x07){
			Board_LED_Set(2, false);
			counter = 0;
			if(xSemaphoreTake(mutex, portMAX_DELAY) == pdTRUE){
				Board_UARTPutSTR((string(xTaskGetTickCount())).c_str());
				Board_UARTPutSTR("\tTask3\r\n");
			}
			vTaskDelay(100);
			xSemaphoreGive(mutex);
		}
		vTaskDelay(100);
	}//while (1)
}//vTask3

/*****************************************************************************
 * Public functions
 ****************************************************************************/

/* the following is required if runtime statistics are to be collected */
extern "C" {

void vConfigureTimerForRunTimeStats( void ) {
	Chip_SCT_Init(LPC_SCTSMALL1);
	LPC_SCTSMALL1->CONFIG = SCT_CONFIG_32BIT_COUNTER;
	LPC_SCTSMALL1->CTRL_U = SCT_CTRL_PRE_L(255) | SCT_CTRL_CLRCTR_L; // set prescaler to 256 (255 + 1), and start timer
}

}
/* end runtime statictics collection */

/**
 * @brief	lab6, stepper motor
 * @return	Nothing, function should not exit
 */
int main(void)
{
	prvSetupHardware();
	ITM_init();
	mutex = xSemaphoreCreateMutex();
	xEventGroup = xEventGroupCreate();

	xTaskCreate(vTask1, "vTask1",
					configMINIMAL_STACK_SIZE + 128, NULL, (tskIDLE_PRIORITY + 1UL),
					(TaskHandle_t *) NULL);
	xTaskCreate(vTask2, "vTask2",
					configMINIMAL_STACK_SIZE + 128, NULL, (tskIDLE_PRIORITY + 1UL),
					(TaskHandle_t *) NULL);
	xTaskCreate(vTask3, "vTask3",
					configMINIMAL_STACK_SIZE + 128, NULL, (tskIDLE_PRIORITY + 1UL),
					(TaskHandle_t *) NULL);

	/* Start the scheduler */
	vTaskStartScheduler();
	/* Should never arrive here */
	return 1;
}
