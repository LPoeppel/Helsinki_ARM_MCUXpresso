					configMINIMAL_STACK_SIZE + 128, NULL, (tskIDLE_PRIORITY + 2UL),
					(TaskHandle_t *) NULL);
/*	xTaskCreate(vTask3, "vTask3",
						configMINIMAL_STACK_SIZE + 128, NULL, (tskIDLE_PRIORITY + 1UL),
						(TaskHandle_t *) NULL);
	*//* Start the scheduler */
	vTaskStartScheduler();
	/* Should never arrive here */
	return 1;
}
