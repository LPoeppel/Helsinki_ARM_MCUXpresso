static void vTask1(void *pvParameters) {
	std::string input_s, output_s;
	int counter = 0;
	int input_i = 0;
	char c;

	while(1){
		input_i = Board_UARTGetChar();
		if(input_i != EOF){
			Board_LED_Set(2, true);
			if(xSemaphoreTake(mutex, portMAX_DELAY) == pdTRUE){
				c = input_i;
				if(std::isspace(c)){
					if(!input_s.empty()){
						output_s = debug(&input_s, counter);
						cstr = output_s.c_str();
