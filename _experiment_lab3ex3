static void vTask2(void *pvParameters){
	SW1 = new DigitalIoPin(0, 17, DigitalIoPin::pullup, true);

	while(1){
		char buffer[64] = "thisIsAString.\r\n";
		if(SW1->read()){
			Board_LED_Set(0,false);
			Board_LED_Set(1,true);
			Board_LED_Set(2,false);
			//xQueueSendToFront( xQueue, x, (TickType_t) 10 );

			char output[64];
			xQueueSendToBack( xQueue, buffer , portMAX_DELAY );
			vTaskDelay(1000);
			xQueueReceive(xQueue, output, portMAX_DELAY);
			vTaskDelay(1000);
			ITM_write(output);

			Board_LED_Set(1,false);
		}
	}//while (1)
}//vTask2
